{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Server/Debug/Server.exe",
            "args": [
                "--port", "3333",
                "--threads-count", "4",
                "--db-port", "10000",
                "--db-name", "localhost",
                //"--log-file", "server.log",
                "--log-level", "debug"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "CMake Build All"
        },
        {
            "name": "Debug CommandLineClient",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/CommandLineClient/Debug/CommandLineClient.exe",
            "args": [
                "--server-port", "3333",
                "--server-name", "localhost",
                //"--log-file", "client.log",
                "--log-level", "debug"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "CMake Build All"
        },
        {
            "name": "Python: DB Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/PythonDbAgent/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Resource Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/PythonResourceAgent/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/Frontend/resource-monitor",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal"
        }
    ]
}