    "version": "0.2.0",
    "configurations": [
        {
            "name": "Clear CMake Cache",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd.exe",
            "args": ["/c", "echo Cache cleared"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Clear CMake Cache"
        },
        {
            "name": "Debug Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/Server.exe",
            "args": [
                "--port", "3333",
                "--threads-count", "4",
                "--db-port", "10000",
                "--db-name", "computer.host",
                //"--log-file", "server.log",
                "--log-level", "debug",
                "--ip", "192.168.0.222"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Server"
        },
        {
            "name": "Debug CommandLineClient",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/CommandLineClient.exe",
            "args": [
                "--server-port", "3333",
                "--server-name", "laptop.host",
                //"--log-file", "client.log",
                //"--print-file", "print.txt",
                //"--input-file", "a.txt",
                "--log-level", "debug"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build CommandLineClient"
        },
        {
            "name": "Python: DB Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/PythonDbAgent/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Resource Agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/PythonResourceAgent/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/Frontend/resource-monitor",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal"
        },
        {
            "name": "Release Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Release/Server.exe",
            "args": [
                "--port", "3333",
                "--threads-count", "4",
                "--db-port", "10000",
                "--db-name", "computer.host",
                //"--log-file", "server.log",
                "--log-level", "debug",
                "--ip", "192.168.0.222"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Server Release"
        },
        {
            "name": "Release CommandLineClient",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Release/CommandLineClient.exe",
            "args": [
                "--server-port", "3333",
                "--server-name", "computer.host",
                //"--log-file", "client.log",
                //"--print-file", "print.txt",
                //"--input-file", "a.txt",
                "--log-level", "debug"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build CommandLineClient Release"
        },
        {
            "name": "RelWithDebInfo Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/RelWithDebInfo/Server.exe",
            "args": [
                "--port", "3333",
                "--threads-count", "4",
                "--db-port", "10000",
                "--db-name", "computer.host",
                //"--log-file", "server.log",
                "--log-level", "debug",
                "--ip", "192.168.0.222"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Server RelWithDebInfo"
        },
        {
            "name": "RelWithDebInfo CommandLineClient",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/RelWithDebInfo/CommandLineClient.exe",
            "args": [
                "--server-port", "3333",
                "--server-name", "computer.host",
                //"--log-file", "client.log",
                //"--print-file", "print.txt",
                //"--input-file", "a.txt",
                "--log-level", "debug"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build CommandLineClient RelWithDebInfo"
        }
    ]
}