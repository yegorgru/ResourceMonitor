{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}/ResourceMonitor"
            ],
            "group": "build"
        },
        {
            "label": "Build Server",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--target",
                "Server"
            ],
            "group": "build",
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "Build CommandLineClient",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--target",
                "CommandLineClient"
            ],
            "group": "build",
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "Build RMUtils",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--target",
                "RMUtils"
            ],
            "group": "build",
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "Build Http",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--target",
                "Http"
            ],
            "group": "build",
            "dependsOn": ["CMake Configure"]
        }
    ]
}